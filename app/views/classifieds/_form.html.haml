= simple_form_for(@classified) do |f|
  = f.error_notification

  .form-inputs
    = f.input :title, placeholder: "Not more 25 letters"
    = f.association :category
    = f.input :price
    = f.input :location
    = f.input :description
    = f.input :file, as: :file
    = f.input :all_tags

  .form-actions
    = f.button :submit
