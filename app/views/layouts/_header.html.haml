%div.hidden-sm.hidden-xs
  = render 'layouts/navigation'

.sm-header.text-center.hidden-md.hidden-lg
  .row
    .col-lg-6
      %h1 ThiefShop
    .col-lg-6
      %ul.list-inline
        %li= link_to 'Home', classifieds_path
        %li= link_to 'Categories', categories_path
        %li= link_to 'Favorites', ''
        %li
          %a{ href: '#', data: {toggle: 'modal', target: '#nav-modal'}}
            %i.fa.fa-bars
        - if is_admin?
          %li= link_to 'Admin Control', admin_root_path
        %li= link_to 'Help', help_path

.container
  .header
    .header-search
      .row
        .col-lg-12
          .well
            = form_tag search_path do 
              .input-group
                = text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search'
                %span.input-group-btn
                  = submit_tag 'Go!', class: 'btn btn-primary'